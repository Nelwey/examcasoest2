<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Gestion Inquilinos</h1>

  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal"
        data-target="#newInquilinoModal">Nuevo</button>

      <!-- Modal -->
      <div class="modal fade" id="newInquilinoModal" tabindex="-1" role="dialog" aria-labelledby="newInquilinoModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Nuevo Inquilino</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/inquilino/add" method="POST">
              <div class="modal-body">

                <div class="form-group">
                  <label for="nombres">Nombres</label>
                  <input type="text" class="form-control" id="nombres" name="nombres">
                </div>
                <div class="form-group">
                  <label for="nombres">Apellidos</label>
                  <input type="text" class="form-control" id="apellidos" name="apellidos">
                </div>
                <div class="form-group">
                  <label for="nombres">Ci</label>
                  <input type="text" class="form-control" id="ci" name="ci">
                </div>
                <div class="form-group">
                  <label for="nombres">Telefono</label>
                  <input type="text" class="form-control" id="telefono" name="telefono">
                </div>

              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      {{!-- <button type="button" class="btn btn-sm btn-outline-secondary">Export</button> --}}
    </div>
  </div>
</div>
<table class="table table-sm table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombres</th>
      <th scope="col">Apellidos</th>
      <th scope="col">Ci</th>
      <th scope="col">Telefono</th>
    </tr>
  </thead>
  <tbody>
    {{#each inquilino}}
    <tr>
      <td>{{nombres}}</td>
      <td>{{apellidos}}</td>
      <td>{{ci}}</td>
      <td>{{telefono}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>