<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Gestion Puestos</h1>

  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal"
        data-target="#newPuestoModal">Nuevo</button>

      <!-- Modal -->
      <div class="modal fade" id="newPuestoModal" tabindex="-1" role="dialog" aria-labelledby="newPuestoModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Nuevo Puesto</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="/puesto/add" method="POST">
              <div class="modal-body">

                <div class="form-group">
                  <label for="numero">Numero</label>
                  <input type="text" class="form-control" id="numero" name="numero">
                </div>
                <div class="form-group">
                  <label for="sector">Sector</label>
                  <input type="text" class="form-control" id="sector" name="sector">
                </div>
                <div class="form-group">
                  <label for="gremio">Gremio</label>
                  <input type="text" class="form-control" id="gremio" name="gremio">
                </div>
                <div class="form-group">
                  <label for="estado">Estado</label>
                  <select name="estado" id="estado" class="form-control">
                    <option value="habilitado">Habilitado</option>
                    <option value="no habilitado">No habilitado</option>
                  </select>
                </div>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      {{!-- <button type="button" class="btn btn-sm btn-outline-secondary">Export</button> --}}
    </div>
  </div>
</div>
<table class="table table-sm table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Numero</th>
      <th scope="col">Sector</th>
      <th scope="col">Gremio</th>
      <th scope="col">Estado</th>
      <th scope="col">Contratos</th>
    </tr>
  </thead>
  <tbody>
    {{#each puestos}}
    <tr>
      <td>{{numero}}</td>
      <td>{{sector}}</td>
      <td>{{gremio}}</td>
      <td>{{estado}}</td>
      <td><button class="btn btn-sm btn-dark">Ver Contratos</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>